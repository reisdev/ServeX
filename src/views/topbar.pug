mixin navlink (target, title)
	if target == request.path
		a(href=target).nav-item.nav-link.active= title
	else
		a(href=target).nav-item.nav-link= title

nav.navbar.navbar-expand.navbar-dark.bg-dark
	.container
		a(href='/').navbar-brand.mb-0 ServeX
		.navbar-nav
			+navlink('/services', 'Serviços')
			if isLoggedIn && user.authLevel === 'Admin'
				+navlink('/cpanel', 'Administração')
			if isLoggedIn
				+navlink('/svpanel', 'Controle de serviços')
				+navlink('/user/profile', 'Meu perfil')
				+navlink('/user/logout', 'Encerrar sessão')
			else
				+navlink('/user/register', 'Cadastre-se')
				+navlink('/user/login', 'Entrar')
